# ===========================================
# OpenAI Configuration
# ===========================================

# OpenAI API Key
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI Model (for custom chat fallback)
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# ===========================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon Key (safe for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role Key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# Sanity CMS Configuration
# Get these from: https://sanity.io/manage
# ===========================================

# Sanity Project ID (from sanity.io/manage)
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id

# Sanity Dataset (usually "production")
NEXT_PUBLIC_SANITY_DATASET=production

# Sanity API Read Token (optional, for preview mode)
# Create at: sanity.io/manage -> API -> Tokens
SANITY_API_READ_TOKEN=

# ===========================================
# ChatKit Workflow IDs from OpenAI Agent Builder
# Create workflows at: https://platform.openai.com/agent-builder
# Workflow IDs look like: wf_68df4b13b3588190a09d19288d4610ec0df388c3983f58d1

# Default workflow (fallback for all contexts)
WORKFLOW_ID_DEFAULT=wf_your_default_workflow_id

# Your Journey workflows (Hajj, Umrah, Rituals, Spiritual)
WORKFLOW_ID_JOURNEY=wf_your_journey_workflow_id
WORKFLOW_ID_HAJJ=wf_hajj_guide_id
WORKFLOW_ID_UMRAH=wf_umrah_guide_id
WORKFLOW_ID_RITUALS=wf_rituals_guide_id
WORKFLOW_ID_SPIRITUAL=wf_spiritual_guide_id

# Plan workflow (Timeline, Visa, Packing, Transport)
WORKFLOW_ID_PLAN=wf_plan_guide_id

# Stay & Food workflow (Hotels, Restaurants, Women-friendly, Late-night)
WORKFLOW_ID_STAY_FOOD=wf_stay_food_id

# Smart Tools workflow (Trip Planner, Budget, Packing List, Distance)
WORKFLOW_ID_TOOLS=wf_tools_id

# Local Tips workflow (Seasonal, Ramadan, Crowd Flow, Routes)
WORKFLOW_ID_TIPS=wf_tips_id
